@model IEnumerable<WebMVC.Models.PremioNobel>

@{
    ViewBag.Title = "Nobel Prizes - Index";
}
<div class="page-header">
    <h2>@ViewBag.Title</h2>
</div>
<p>
    <a href="@Url.Action("Create")" class="btn btn-default" title="Add New"><i class="fa fa-plus"></i></a>

</p>
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th class="col-lg-1">@Html.DisplayNameFor(model => model.Ano)</th>
            <th class="col-lg-3">@Html.DisplayNameFor(model => model.Titulo)</th>
            <th class="col-lg-5">@Html.DisplayNameFor(model => model.Motivacao)</th>
            <th class="col-lg-1">@Html.DisplayNameFor(model => model.Categoria.Nome)</th>
            <th class="col-lg-2"></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Ano)</td>
            <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
            <td>@Html.DisplayFor(modelItem => item.Motivacao)</td>
            <td>@Html.DisplayFor(modelItem => item.Categoria.Nome)</td>
            <td class="text-right">
                @Html.ActionLink("Edit", "Edit", new { id = item.PremioNobelId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PremioNobelId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PremioNobelId })
            </td>
        </tr>
    }

</table>
